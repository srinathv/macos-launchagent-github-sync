<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Label: Unique identifier for this launch agent -->
    <key>Label</key>
    <string>com.github.sync</string>

    <!-- Program: Path to the script to execute -->
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/YOUR_USERNAME/scripts/github-sync.sh</string>
    </array>

    <!-- Schedule: Run every day at 6:00 AM -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>6</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- Standard output log file -->
    <key>StandardOutPath</key>
    <string>/Users/YOUR_USERNAME/Library/Logs/github-sync.log</string>

    <!-- Standard error log file -->
    <key>StandardErrorPath</key>
    <string>/Users/YOUR_USERNAME/Library/Logs/github-sync-error.log</string>

    <!-- Run even when user is not logged in (optional) -->
    <key>RunAtLoad</key>
    <false/>

    <!-- Restart on failure (optional) -->
    <key>KeepAlive</key>
    <false/>

    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>/Users/YOUR_USERNAME</string>

    <!-- Environment variables (useful for PATH) -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
